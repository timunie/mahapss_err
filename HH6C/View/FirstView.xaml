        <TextBlock FontSize="35" FontFamily="Calibri" Margin="120,89,0,0" Foreground="{DynamicResource MahApps.Brushes.Accent}" HorizontalAlignment="Left" Width="636" Height="61" VerticalAlignment="Top" Text="First" />
    </Grid>
